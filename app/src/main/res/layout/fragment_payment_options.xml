<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order.PaymentOptionsFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/section_padding">

        <TextView
            android:id="@+id/textView84"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_top_margin"
            android:layout_marginBottom="@dimen/section_margin"
            android:text="Select your Payment option:"
            android:textColor="@color/heading"
            android:textSize="@dimen/sub_heading" />

        <TextView
            android:id="@+id/payByCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/section_margin"
            android:layout_marginBottom="@dimen/view_bottom_margin"
            android:background="@drawable/round_edges_gray_border_no_bg"
            android:elevation="@dimen/cardview_default_elevation"
            android:padding="@dimen/view_padding"
            android:text="Arraykart Credit Service"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="@dimen/heading" />

        <TextView
            android:id="@+id/textView90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_top_margin"
            android:layout_marginBottom="@dimen/view_bottom_margin"
            android:text="or"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="@dimen/text" />

        <TextView
            android:id="@+id/payByOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_top_margin"
            android:layout_marginBottom="@dimen/view_bottom_margin"
            android:background="@drawable/round_edges_gray_border_no_bg"
            android:elevation="@dimen/cardview_default_elevation"
            android:padding="@dimen/view_padding"
            android:text="Pay using Card or Upi"
            android:textColor="@color/text"
            android:textSize="@dimen/heading" />

        <TextView
            android:id="@+id/textView90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_top_margin"
            android:text="or"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="@dimen/text" />

        <TextView
            android:id="@+id/payCashOnDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/section_margin"
            android:layout_marginBottom="@dimen/view_bottom_margin"
            android:background="@drawable/round_edges_gray_border_no_bg"
            android:elevation="@dimen/cardview_default_elevation"
            android:padding="@dimen/view_padding"
            android:text="Cash on Delivery"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="@dimen/heading" />

        <TextView
            android:id="@+id/whatCredServ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_top_margin"
            android:layout_marginBottom="@dimen/view_bottom_margin"
            android:text="What is Arraykart Credit Service ?"
            android:textColor="@color/hyperlink"
            android:textSize="@dimen/text" />

    </LinearLayout>
</ScrollView>